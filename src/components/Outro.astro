---
const {data} = Astro.props
---
<style>
  p+div {
    display:flex;
    gap:0.6rem;
  }  
  img {
    width:90px;
    height:90px;
  }
  p {
    margin:0;
    font-size:0.8rem;
    font-weight:bold;
  }
  h3{
    margin:0;
    font-size:1.13rem;
  }
  .outro_section {
    border-top:1px solid rgb(202, 202, 202);
    padding: 0.8rem 0;
    margin-top:1rem;
  }
</style>
<div class="outro_section">
  <a href=`/${data.category}/${data.slug}`>
    <p class="tag">{data.category}</p>
    <div>
        <h3>{data.title}</h3>
        <img src="https://res.cloudinary.com/djvdendlh/image/upload/v1743370342/gratisography-cool-pineapple-free-stock-photo_o9m0wn.png" alt="">
    </div>
  </a>
</div>