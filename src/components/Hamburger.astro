<div class="hamburger_section">
  <span aria-label="Blog Logo" class="logo">Boxxed</span>
  <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
    <svg class="menu-icon" viewBox="0 0 24 24" width="32" height="32">
      <!-- Hamburger lines (visible by default) -->
      <rect class="menu-line top" x="3" y="6" width="18" height="2" rx="1" />
      <rect class="menu-line middle" x="3" y="11" width="18" height="2" rx="1" />
      <rect class="menu-line bottom" x="3" y="16" width="18" height="2" rx="1" />
      
      <!-- Close icon (X) - hidden by default -->
      <g class="close-icon" transform="scale(0)" opacity="0">
        <line x1="6" y1="6" x2="18" y2="18" stroke-width="2" stroke-linecap="round" />
        <line x1="6" y1="18" x2="18" y2="6" stroke-width="2" stroke-linecap="round" />
      </g>
    </svg>
  </button>
</div>
